<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/registerScreenBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="@color/purple_700"
        android:padding="5dp"
        android:text="Register Screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profileScreenBtn"
        android:layout_width="148dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:background="@color/purple_700"
        android:padding="5dp"
        android:text="Profile Screen"
        app:layout_constraintEnd_toEndOf="@+id/registerScreenBtn"
        app:layout_constraintStart_toStartOf="@+id/registerScreenBtn"
        app:layout_constraintTop_toBottomOf="@+id/registerScreenBtn"
       />

    <Button
        android:id="@+id/viewBtn"
        android:layout_width="148dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:background="@color/purple_700"
        android:padding="5dp"
        android:text="View Screen"
        app:layout_constraintEnd_toEndOf="@+id/profileScreenBtn"
        app:layout_constraintStart_toStartOf="@+id/profileScreenBtn"
        app:layout_constraintTop_toBottomOf="@+id/profileScreenBtn"
        />

    <Button
        android:id="@+id/extendedbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@color/purple_700"
        android:padding="5dp"
        android:text="Extended FAB Button"
        app:layout_constraintEnd_toEndOf="@+id/viewBtn"
        app:layout_constraintStart_toStartOf="@+id/viewBtn"
        app:layout_constraintTop_toBottomOf="@+id/viewBtn"
        />
</androidx.constraintlayout.widget.ConstraintLayout>