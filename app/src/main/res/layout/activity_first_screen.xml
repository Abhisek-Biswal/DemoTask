<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstScreenActivity">
    
    <Button
        android:id="@+id/btn_first_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/go_to_second_screen"
        android:layout_marginTop="100dp"
        />
    <TextView
        android:id="@+id/tv_data_first_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/btn_first_screen"
        app:layout_constraintEnd_toEndOf="@+id/btn_first_screen"
        app:layout_constraintTop_toBottomOf="@+id/btn_first_screen"
        tools:text="Data"
        android:layout_marginTop="20dp"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="20sp"/>
    
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/img_view"
        app:layout_constraintTop_toBottomOf="@+id/img_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="40dp"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_data_first_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:text="Gallery Image Button"/>





</androidx.constraintlayout.widget.ConstraintLayout>