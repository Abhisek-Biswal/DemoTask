<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CouroutineTask">


    <Button
        android:id="@+id/couroutines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/purple_700"
        android:padding="5dp"
        android:text="Couroutines Task1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <Button
        android:id="@+id/couroutines1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@color/purple_700"
        android:padding="5dp"
        android:text="Couroutines Task2"
        app:layout_constraintEnd_toEndOf="@+id/couroutines"
        app:layout_constraintStart_toStartOf="@+id/couroutines"
        app:layout_constraintTop_toBottomOf="@+id/couroutines"
        />

    <Button
        android:id="@+id/couroutines2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@color/purple_700"
        android:padding="5dp"
        android:text="Couroutines Task3"
        app:layout_constraintEnd_toEndOf="@+id/couroutines1"
        app:layout_constraintStart_toStartOf="@+id/couroutines1"
        app:layout_constraintTop_toBottomOf="@+id/couroutines1"
        />

    <Button
        android:id="@+id/couroutines3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@color/purple_700"
        android:padding="5dp"
        android:text="Couroutines Task4"
        app:layout_constraintEnd_toEndOf="@+id/couroutines2"
        app:layout_constraintStart_toStartOf="@+id/couroutines2"
        app:layout_constraintTop_toBottomOf="@+id/couroutines2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>