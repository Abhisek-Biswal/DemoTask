<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <TextView
        android:id="@+id/sign_up_txt_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sign_up_txt_view1"
        android:layout_margin="50dp"/>

    <EditText
        android:id="@+id/sign_up_txt_view1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_txt_view"
        style="@style/CustomEditText"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_txt_view"
        app:layout_constraintStart_toStartOf="@+id/sign_up_txt_view"
        app:layout_constraintBottom_toTopOf="@id/sign_up_txt_view2"
        android:hint="Enter Your Name"

        />

    <EditText
        android:id="@+id/sign_up_txt_view2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_txt_view1"
        app:layout_constraintLeft_toLeftOf="@+id/sign_up_txt_view1"
        app:layout_constraintStart_toStartOf="@+id/sign_up_txt_view1"
        app:layout_constraintEnd_toEndOf="@id/sign_up_txt_view1"
        android:hint="Enter Your Email"
        style="@style/CustomEditText"/>

    <EditText
        android:id="@+id/sign_up_txt_view3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_txt_view2"
        app:layout_constraintLeft_toLeftOf="@+id/sign_up_txt_view2"
        app:layout_constraintStart_toStartOf="@+id/sign_up_txt_view2"
        app:layout_constraintEnd_toEndOf="@id/sign_up_txt_view2"
        android:hint="Enter Your Mobile Number"
        style="@style/CustomEditText"
        />

    <EditText
        android:id="@+id/sign_up_txt_view4"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_txt_view3"
        app:layout_constraintLeft_toLeftOf="@+id/sign_up_txt_view3"
        app:layout_constraintStart_toStartOf="@+id/sign_up_txt_view3"
        app:layout_constraintEnd_toEndOf="@id/sign_up_txt_view3"
        android:hint="Enter Your Password"
        style="@style/CustomEditText"/>

    <EditText
        android:id="@+id/sign_up_txt_view5"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_txt_view4"
        app:layout_constraintLeft_toLeftOf="@+id/sign_up_txt_view4"
        app:layout_constraintStart_toStartOf="@+id/sign_up_txt_view4"
        app:layout_constraintEnd_toEndOf="@id/sign_up_txt_view4"
        android:hint="Enter Confirm Password"
        style="@style/CustomEditText"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sign_up_txt_view5"
        app:layout_constraintLeft_toLeftOf="@id/sign_up_txt_view5"
        app:layout_constraintEnd_toEndOf="@id/sign_up_txt_view5"
        android:text="Create Account"
        style="@style/custom_Button"
        app:backgroundTint="@color/black"
        />
    <TextView
        android:id="@+id/sg_txt_view1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_button"
        app:layout_constraintLeft_toLeftOf="@+id/sign_up_button"
        android:text="Already have Account?"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="210dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/sg_txt_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sign_up_button"
        android:text="Sign in"
        app:layout_constraintLeft_toLeftOf="@id/sg_txt_view1"
        app:layout_constraintRight_toRightOf="@+id/sign_up_button"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>