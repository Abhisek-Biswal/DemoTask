<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
       <variable
           name="edit"
           type="com.example.myapplication.Home"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditFragment">


        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_activity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/etv_home1"
            android:padding="30dp"
            android:textSize="30sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/etv_home1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_name"
            app:layout_constraintStart_toStartOf="@+id/tv_title2"
            app:layout_constraintEnd_toEndOf="@+id/tv_title2"
            app:layout_constraintTop_toBottomOf="@+id/tv_title2"
            android:layout_margin="40dp"
            android:padding="30dp"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/etv_email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_email"
            app:layout_constraintStart_toStartOf="@+id/etv_home1"
            app:layout_constraintEnd_toEndOf="@+id/etv_home1"
            app:layout_constraintTop_toBottomOf="@+id/etv_home1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:padding="30dp"
            android:inputType="textEmailAddress"

            />

        <EditText
            android:id="@+id/etv_address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_address"
            app:layout_constraintStart_toStartOf="@+id/etv_email1"
            app:layout_constraintEnd_toEndOf="@+id/etv_email1"
            app:layout_constraintTop_toBottomOf="@+id/etv_email1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:padding="30dp"
            android:inputType="textPostalAddress"
            />

        <EditText
            android:id="@+id/etv_phone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_phone"
            app:layout_constraintStart_toStartOf="@+id/etv_address1"
            app:layout_constraintEnd_toEndOf="@+id/etv_address1"
            app:layout_constraintTop_toBottomOf="@+id/etv_address1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:padding="30dp"
            android:inputType="phone"
            />

        <EditText
            android:id="@+id/etv_hobby1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_hobby"
            app:layout_constraintStart_toStartOf="@+id/etv_phone1"
            app:layout_constraintEnd_toEndOf="@+id/etv_phone1"
            app:layout_constraintTop_toBottomOf="@+id/etv_phone1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:padding="30dp"
            android:inputType="text"
            />



        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_button"
            app:layout_constraintStart_toStartOf="@+id/etv_hobby1"
            app:layout_constraintEnd_toEndOf="@+id/etv_hobby1"
            app:layout_constraintTop_toBottomOf="@+id/etv_hobby1"
            android:layout_marginTop="10dp"

            android:padding="30dp"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>