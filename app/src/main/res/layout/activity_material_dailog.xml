<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaterialDailogAct">


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_material_dailog_box"
        android:text="Material Dailog Box"
        android:textSize="20sp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_margin="30dp"
        android:textStyle="bold"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_click"
        android:textSize="15sp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_material_dailog_box"
        app:layout_constraintEnd_toEndOf="@+id/tv_material_dailog_box"
        app:layout_constraintTop_toBottomOf="@+id/tv_material_dailog_box"
        android:layout_marginTop="20dp"
        android:text="Click"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_show_data"
        android:textSize="20sp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@+id/btn_click"
        app:layout_constraintEnd_toEndOf="@id/btn_click"
        app:layout_constraintTop_toBottomOf="@id/btn_click"
        android:layout_margin="30dp"
        android:text="Show Data"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>