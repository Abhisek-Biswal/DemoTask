<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveFileAct">


    <ImageView
        android:id="@+id/iv_tom"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_tom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/save_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Image"
        app:layout_constraintTop_toBottomOf="@+id/iv_tom"
        app:layout_constraintStart_toStartOf="@id/iv_tom"
        app:layout_constraintEnd_toEndOf="@id/iv_tom"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Button"
        app:layout_constraintTop_toBottomOf="@+id/save_img_btn"
        app:layout_constraintStart_toStartOf="@+id/save_img_btn"
        app:layout_constraintEnd_toEndOf="@id/save_img_btn"
        android:layout_marginTop="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>