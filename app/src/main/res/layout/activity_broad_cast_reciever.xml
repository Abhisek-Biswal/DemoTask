<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BroadCastRecieverAct">

    <TextView
        android:id="@+id/tv_battery_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/battery_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:textSize="20sp"
        />

    <ProgressBar
        android:id="@+id/pb_battery_status"
        android:layout_width="300dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_battery_status"
        app:layout_constraintStart_toStartOf="@id/tv_battery_status"
        app:layout_constraintEnd_toEndOf="@id/tv_battery_status"
        android:layout_marginTop="30dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>